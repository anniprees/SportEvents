@page
@model SportEvents.WebApplicationID.Pages.Admin.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Item.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.SportsCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.EventTime)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.Location)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.RegisteredParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.MaxParticipants)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(Model.GetCategoryName(item.SportsCategoryId))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisteredParticipants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxParticipants)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
