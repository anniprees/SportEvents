@page
@using SportEvents.Pages.Extensions
@model SportEvents.WebApplicationID.Pages.Client.Registrations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.EditControlsForDropDown(m => m.Item.EventId, Model.OpenEvents)
            <div class="form-group">
                <label asp-for="@Model.Item.ParticipantId" class="control-label"></label>
                <input asp-for="@Model.Item.ParticipantId" class="form-control" />
                <span asp-validation-for="@Model.Item.ParticipantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}