@page
@using SportEvents.Pages.Extensions
@model SportEvents.WebApplication.Pages.Events.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Item.Id" class="control-label"></label>
                <input asp-for="@Model.Item.Id" class="form-control" />
                <span asp-validation-for="@Model.Item.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.Name" class="control-label"></label>
                <input asp-for="@Model.Item.Name" class="form-control" />
                <span asp-validation-for="@Model.Item.Name" class="text-danger"></span>
            </div>
            @Html.EditControlsForDropDown(m => m.Item.SportsCategoryId, Model.Categories)
            <div class="form-group">
                <label asp-for="@Model.Item.EventDate" class="control-label"></label>
                <input asp-for="@Model.Item.EventDate" class="form-control" />
                <span asp-validation-for="@Model.Item.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.EventTime" class="control-label"></label>
                <input asp-for="@Model.Item.EventTime" class="form-control" />
                <span asp-validation-for="@Model.Item.EventTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.Location" class="control-label"></label>
                <input asp-for="@Model.Item.Location" class="form-control" />
                <span asp-validation-for="@Model.Item.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.MaxParticipants" class="control-label"></label>
                <input asp-for="@Model.Item.MaxParticipants" class="form-control" />
                <span asp-validation-for="@Model.Item.MaxParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}