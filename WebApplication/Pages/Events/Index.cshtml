@page
@model SportEvents.WebApplication.Pages.Events.IndexModel

@{
    Layout = "_Index";
    var page = Model.PageUrl;

}

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Item.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.SportsCategory)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Item.EventTime)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.Raw(Model.GetCategoryName(item.SportsCategory))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
